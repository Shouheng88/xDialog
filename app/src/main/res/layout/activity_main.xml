<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/sw"
                android:layout_gravity="center_horizontal"
                android:text="Bottom Sheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_no_bg"
                android:text="无背景对话框 | WRAP"
                style="@style/MenuItemButton"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_no_bg_half"
                android:text="无背景对话框 | HALF"
                style="@style/MenuItemButton"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_blur_bg"
                android:text="透明背景"
                style="@style/MenuItemButton"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_no_bg_one_third"
                android:text="无背景对话框 | TWO THIRD"
                style="@style/MenuItemButton"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_normal"
                android:text="普通的对话框 [中间|WRAP|自定义标题|自定义底部]"
                style="@style/MenuItemButton"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_normal_top"
                android:text="普通的对话框 [上方]"
                style="@style/MenuItemButton"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_normal_bottom"
                android:text="普通的对话框 [下方|黑色主题]"
                style="@style/MenuItemButton"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_editor_normal"
                android:text="编辑对话框 [边角4dp|内容无限制] | HALF"
                style="@style/MenuItemButton"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_editor_numeric"
                android:text="编辑对话框 [数字|单行|长度10] | TWO THIRD"
                style="@style/MenuItemButton"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_list_normal"
                android:text="简单的列表"
                style="@style/MenuItemButton"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_address"
                android:text="地址选择对话框"
                style="@style/MenuItemButton"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_content"
                android:text="简单内容对话框"
                style="@style/MenuItemButton"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_custom_list"
                android:text="自定义列表对话框 [带加载状态|支持异步加载]"
                style="@style/MenuItemButton"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_not_cancelable"
                android:text="无法取消的对话框 [慎重点击]"
                style="@style/MenuItemButton"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_simple_grid"
                android:text="网格对话框"
                style="@style/MenuItemButton"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_bottom_sheet"
                android:text="Bottom sheet dialog"
                style="@style/MenuItemButton"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>